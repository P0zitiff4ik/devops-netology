    listen       [::]:{{ lighthouse_http_port }};
    server_name  {{ ansible_hostname }};
    root         {{ lighthouse_path }};

    error_page 404 /404.html;
    location = /404.html {
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
    }
}